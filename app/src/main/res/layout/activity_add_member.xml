<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddMemberActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/upload_CardView"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/btn_back_newMember"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/back_icon"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="18dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New Member"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/upload_Text"
                />
   </LinearLayout>

    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/title_name"
        android:hint="Name"
        android:layout_below="@id/upload_CardView"
        android:textSize="14dp"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/recipeTitle"
        app:errorEnabled="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_name"

        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textPersonName"



            />

    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_below="@id/recipeTitle"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/enter_Email"
        android:hint="Enter Email"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/min_00"
        app:errorEnabled="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/enter_Email"


        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:inputType="number"



            />

    </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_below="@+id/min_00"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/mobile_num"
        android:hint="Mobile Number"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/easy"
        app:errorEnabled="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mobile_num"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Mobile Number"
            />

    </android.support.design.widget.TextInputLayout>


</RelativeLayout>