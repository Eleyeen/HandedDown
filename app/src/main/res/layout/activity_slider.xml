<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SliderActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/lorem"
    android:textStyle="bold"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"
    android:text="LOREM IPSU MDOLOR"
    android:textSize="25sp"
    android:textColor="#01dc9e"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/line1txt"
    android:layout_below="@+id/lorem"
    android:layout_marginTop="10dp"
    android:textColor="#001c36"
    android:text="lorem_ipsum_dolor_sitamet_consecteture"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/line2txt"
    android:layout_below="@+id/line1txt"
    android:textColor="#001c36"
    android:text="adipiscing_elit_donec_maximums_dolor"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/line3txt"
    android:layout_below="@+id/line2txt"
    android:textColor="#001c36"
    android:text="nec imperdiet consequat"
    android:layout_centerHorizontal="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <android.support.design.widget.TabLayout
        android:layout_centerVertical="true"
    android:id="@+id/tab_dots"
    android:layout_below="@+id/line3txt"
    android:layout_marginTop="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    app:tabBackground="@drawable/tab_selector"
    app:tabGravity="center"
    app:tabIndicatorHeight="0dp" />


</RelativeLayout>