<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:id="@+id/startId"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/btn_arrow"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/foodpic2"
            android:id="@+id/image_View2"
            android:scaleType="fitXY"

            />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <RelativeLayout

                    android:layout_marginTop="70dp"
                    android:background="@drawable/cornor__drawable"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    >
                    <TextView

                        android:background="#00FBF6EF"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:text="Recipe Name Here"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:id="@+id/text_card_1"
                        />

                    <TextView
                        android:background="#00FBF6EF"
                        android:text="lorem ipusm dolor sit amet, consectetur"
                        android:layout_width="230dp"
                        android:layout_height="20dp"
                        android:layout_below="@id/text_card_1"
                        android:id="@+id/text_View_card"
                        />



                    <TextView
                        android:background="#00FBF6EF"
                        android:layout_below="@id/text_View_card"
                        android:textSize="16dp"
                        android:textColor="#000"
                        android:text="John Smith"
                        android:id="@+id/text_card_jhon"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        />



                </RelativeLayout>

        </FrameLayout>
        <Button
            android:layout_marginTop="89dp"
            android:layout_marginLeft="247dp"
            android:background="@mipmap/grouparrow"
            android:layout_width="34dp"
            android:layout_height="34dp"
            />

    </android.support.v7.widget.CardView>

</RelativeLayout>