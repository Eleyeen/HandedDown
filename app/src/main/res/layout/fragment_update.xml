<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.UpdateFragment">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        app:behavior_hideable="true"
        app:behavior_peekHeight="10dp"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        android:background="#F6F6F6"
        android:id="@+id/nestedscrolView"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:cardCornerRadius="30dp"
            android:id="@+id/upload_CardView"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Recipe"
                android:textSize="28dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/upload_Text"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload This Recipe As:"
                android:layout_below="@+id/upload_Text"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:id="@+id/text3"
                />

            
            
            <LinearLayout
                android:layout_below="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/rty"
                android:layout_centerHorizontal="false"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    />
                <Switch
                    android:id="@+id/button_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ME"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />


            </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/upload_CardView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:src="@drawable/plus43"
                android:background="@drawable/plus_image"
                android:id="@+id/plus_circle"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choose file: mp3,mp4,mov"
                android:layout_below="@+id/plus_circle"
                android:layout_centerHorizontal="true"
                />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/uplod_image"
                android:layout_width="320dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/upload_CardView"
                android:id="@+id/pic_upload"
                android:background="@drawable/uplod_image"

                />


            <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:hint="Title"
        android:layout_below="@id/pic_upload"
        android:textSize="14dp"
        />
            <android.support.design.widget.TextInputLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/recipeTitle"
        app:errorEnabled="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"

        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="Recipe Title"
            android:id="@+id/titleUpload"
            android:inputType="textPersonName"



            />

    </android.support.design.widget.TextInputLayout>
            <TextView
        android:layout_below="@id/recipeTitle"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/preparation_time"
        android:hint="preparation Time"
        />
            <android.support.design.widget.TextInputLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/min_00"
        app:errorEnabled="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/preparation_time"


        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="00min"
            android:id="@+id/preparationTime"
            android:inputType="number"



            />

    </android.support.design.widget.TextInputLayout>

            <TextView
        android:layout_below="@+id/min_00"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/difficulty_level"
        android:hint="difficulty Level"
        />

            <android.support.design.widget.TextInputLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/easy"
        app:errorEnabled="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/difficulty_level"


        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Easy"
            android:id="@+id/difficulty_level23"
            />

    </android.support.design.widget.TextInputLayout>
            <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/easy"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:id="@+id/ingredient_text"
        android:hint="Ingredient"
        />
            <LinearLayout
        android:layout_width="3220dp"
        android:layout_height="wrap_content"
        android:id="@+id/instruction_linear"
        android:orientation="horizontal"
        android:layout_below="@+id/ingredient_text"
        android:layout_centerHorizontal="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <android.support.design.widget.TextInputLayout
            android:layout_width="320dp"

            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/instruction_Edittext"
            app:errorEnabled="true"
            android:layout_centerHorizontal="true"


            >

            <android.support.design.widget.TextInputEditText
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:hint="Choose as many as used"
                android:inputType="textEmailAddress"
                />

        </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

    </LinearLayout>
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/instruction_linear"
                android:id="@+id/lainear_Text1"
                android:orientation="horizontal"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Ingredient Name"
                        android:textSize="15dp"
                        />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_width="17dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/xicon"
                        android:layout_marginTop="3dp"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginLeft="18dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Ingredient Name"
                            android:textSize="15dp"
                            />
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="17dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/xicon"
                            android:layout_marginTop="3dp"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/lainear_Text1"
                android:id="@+id/lainear_Text2"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    app:cardCornerRadius="5dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Ingredient"
                            android:textSize="15dp"
                            />
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="17dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/xicon"
                            android:layout_marginTop="3dp"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="5dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Ingredient"
                            android:textSize="15dp"
                            />
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="17dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/xicon"
                            android:layout_marginTop="3dp"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    app:cardCornerRadius="5dp"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Ingredient"
                            android:textSize="15dp"
                            />
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="17dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/xicon"
                            android:layout_marginTop="3dp"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lainear_Text2"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"
                android:id="@+id/ingredient_text1"
                android:hint="Instruction"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:id="@+id/describe_here"
                app:errorEnabled="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ingredient_text1"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:hint="Describe here"
                    android:id="@+id/desc"
                    android:inputType="textEmailAddress"
                    />

            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/upload_button"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/describe_here"
                android:layout_marginTop="10dp"
                android:background="@drawable/custoombutton"
                android:text="Upload Recipe"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20dp"
                />



        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>