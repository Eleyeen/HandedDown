<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/container"
    android:layout_height="match_parent"
    tools:context=".Activities.AddFriendActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/add_Friend_CardView"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:id="@+id/back_image_addMember"
                android:src="@drawable/back_icon"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="18dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Friend"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/upload_Text"
                />
            <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Done"
                android:id="@+id/done_AddFriend"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="19dp"
                android:textColor="#01DC9E"
                />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_Friend_CardView"

        >

    </android.support.v7.widget.SearchView>
    <Button
        android:background="#01DC9E"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/button_add_Friend"
        android:text="Add New Member"
        android:textColor="#FFFFFFFF"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>